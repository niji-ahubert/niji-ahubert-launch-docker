{% extends 'base.html.twig' %}

{% block title %}Modification Projet{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <twig:Breadcrumb label="{{ project.client }}" path="{{ routePath }}" />
    <twig:Breadcrumb label="{{ project.project }}" path="{{ path('app_project_list_by_client', {'client': project.client}) }}"/>
    <twig:Breadcrumb label="Project Configuration" />
{% endblock %}

{% block body %}
    {% set hover = 'project_edit' %}

    {{ include ( folder ~'/_buttons.html.twig', {'project': project, 'hover': hover}) }}

    <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden">
        <div class="bg-white dark:bg-gray-800 mx-auto max-w-screen-2xl px-4 lg:px-12">

            <div class="mb-3 mt-6">
                <div class="flex justify-between items-center pb-4 mb-4 rounded-t border-b sm:mb-5 dark:border-gray-600">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                        {{ 'project.form.modify.title'|trans({'%project%': project.project}) }}
                    </h3>
                </div>
            </div>

            <twig:FlashMessage />

            <turbo-frame id="project-form-frame" target="_top">
                {{ include( folder ~'/_form.html.twig' , {'form': form} )}}
            </turbo-frame>

        </div>
    </div>
{% endblock %}